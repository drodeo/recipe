<header>
  <nav class="transparent" >
    <div class="nav-wrapper">
      <%= link_to "Рецепты от Жули", root_path, class: "brand-logo blue-text" %>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to 'Все рецепты', recipes_path %></li>
        <% if can? :create, Recipe %>
          <li><%= link_to 'Новый рецепт', new_recipe_path %> </li>
        <% end %> 
        <li><%= link_to 'Обо мне', about_path %></li>
        <li>
        <% if current_user %>
          <a class="dropdown-button" href="#"
                data-activates="user-menu" 
                data-beloworigin="true"
                data-hover="true">
            <%= image_tag current_user.gravatar, class: "circle responsive-img profile-image" %>
            <%= current_user.name %><i class="material-icons right">arrow_drop_down</i>
          </a>
          <ul id="user-menu" class="dropdown-content">
            <li>
              <%= link_to user_profile_path do %>
                <i class="material-icons left">perm_identity</i>
                <%= t('nav.profile') %>
              <% end %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="material-icons left">input</i>
                <%= t("nav.log_out") %>
              <% end %>
            </li>
          </ul>
        <% else %>
          <%= link_to t('nav.log_in'), new_user_session_path %>
        <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
